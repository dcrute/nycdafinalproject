<h2>My Profile</h2>

<form method="get" action="/post">
<input type="text" class="post" name="post" pattern="(?:([\W\w])){1,150}" placeholder="What's on your mind???" autofocus>   
<input type="submit"></form>
</br>

<%@user = Profile.find(@current_profile.id).user %>
<%="<img class=\"profile_pics\" src=\"#{@current_profile.avatar.url}\" alt=\"#{@current_profile.username.capitalize}\'s Profile Picture\" width=\"100\" height=\"100\">"%>
Name: <%= @user.fname.capitalize %>&nbsp;
<%= @user.lname.capitalize %>
</br>
E-Mail: <%= @user.email.capitalize %>
</br>
Birthday: <%= @current_profile.bday.strftime("%b %d, %Y") %>
</br>
Hometown: <%= @current_profile.hometown.titleize %>
</br>
Member Since: <%= @user.created_at.strftime("%b %d, %Y") %>
</br>

<h4>Posts</h4>
<% if Post.where(:user_id => @current_profile.user_id).first%> 
<%posts = Post.where(:user_id => @current_profile.user_id).reverse_order%>
<% posts.each do |post| %>
<%=post.string_data%>
</br>
<a href="/delete_post?pid=<%=post.id%>">delete</a>&nbsp;<a href="javascript:void(0);" onclick="startPostBox(); return false;">edit</a><div id="light" class="white_content">
	<form method="get" action="/edit_post">
<input type="text" class="post" name="post" pattern="(?:([\W\w])){1,150}" value="<%=post.string_data%>" autofocus>
<input type="hidden" name="pid" value="<%=post.id%>">  
<input type="submit" value="done"></form>
	<a href="javascript:void(0)" onclick="document.getElementById('light').style.display='none';document.getElementById('fade').style.display='none'">close</a></div>
        <div id="fade" class="black_overlay"></div>
</br>
<% end %>
<% end %>
</br>